{
    "layout": {
        "title": "Contact Us",
        "steps": [{
            "rows": [
                {
                    "cells": [
                        {
                            "title": "First Name",
                            "type": "column",
                            "info": {
                                "internalName": "FirstName",
                                "type": "text"
                            }
                        },
                        {
                            "title": "Last Name",
                            "type": "column",
                            "info": {
                                "internalName": "LastName",
                                "type": "text"
                            }
                        }
                    ]
                },
                {
                    "cells": [
                        {
                            "title": "Work Email",
                            "type": "column",
                            "grow": 3,
                            "info": {
                                "internalName": "Email",
                                "type": "text",
                                "validations": [
                                    { "name": "required" },
                                    { "name": "email" }
                                ]
                            }
                        },
                        {
                            "title": "Promotions emails",
                            "type": "column",
                            "info": {
                                "internalName": "optin",
                                "type": "bool",
                                "on": "Opted in",
                                "off": "Opted out"
                            }
                        }
                    ]
                },
                {
                    "cells": [
                        {
                            "title": "Phone number",
                            "type": "column",
                            "grow": 3,
                            "info": {
                                "internalName": "PhoneNumber",
                                "type": "text",
                                "prefix": "#",
                                "validations": [
                                    { "name": "phone" }
                                ]
                            }
                        },
                        {
                            "title": "Promotions SMS?",
                            "type": "column",
                            "info": {
                                "internalName": "optintext",
                                "type": "bool",
                                "on": "Opted in",
                                "off": "Opted out"
                            },
                            "conditions": [
                                { "field": "PhoneNumber", "operator": "empty", "negate": true }
                            ],
                            "else": { "type": "html", "html": "Enter your phone for exclusive deals!" }
                        }
                    ]
                },
                {
                    "cells": [
                        {
                            "type": "html",
                            "html": "You have opted in for promotional materials. These may include time-sensitive promotions and promotion codes and exclusive deals that are only available for subscribers.",
                            "info": {
                                "requiredRead": "I agree to receive promotional materials and exclusive deals."
                            },
                            "conditions": [
                                { "field": "optin", "operator": "is", "value": "true" },
                                { "field": "optintext", "operator": "is", "value": "true", "joinOperator": "or" }
                            ]
                        }
                    ]
                },
                {
                    "cells": [
                        {
                            "title": "Department",
                            "type": "column",
                            "info": {
                                "internalName": "department",
                                "type": "choice",
                                "options": [
                                    { "key": "Account management", "value": "Account management" },
                                    { "key": "Sales department", "value": "Sales department" },
                                    { "key": "Technical issue", "value": "Technical issue" }
                                ]
                            }
                        },
                        {
                            "title": "Subject",
                            "type": "column",
                            "info": {
                                "internalName": "Title",
                                "type": "text",
                                "validations": [
                                    {
                                        "name": "required",
                                        "error": "How can we help you?"
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "cells": [
                        {
                            "title": "Message",
                            "type": "column",
                            "info": {
                                "internalName": "message",
                                "type": "text",
                                "mode": "multiline",
                                "validations": [
                                    { "name": "required" },
                                    {
                                        "conditions": [{ "field": "message", "operator": "more", "value": "5", "negate": true }],
                                        "error": "Please provide more information"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }]
    },
    "onSubmitMessage": "Thank you for contacting us!"
},
{
    "layout": {
        "steps": [
            {
                "rows": [
                    {
                        "hidden": true,
                        "cells": [
                            {
                                "title": "Title",
                                "type": "column",
                                "info": {
                                    "internalName": "Title",
                                    "type": "text",
                                    "defaultValue": "[Email] [FirstName] [LastName]"
                                }
                            }
                        ]
                    },
                    {
                        "cells": [
                            {
                                "info": {
                                    "internalName": "FirstName",
                                    "type": "text",
                                    "validations": [
                                        {
                                            "name": "required"
                                        }
                                    ]
                                },
                                "title": "First Name",
                                "type": "column"
                            },
                            {
                                "info": {
                                    "internalName": "LastName",
                                    "type": "text",
                                    "validations": [
                                        {
                                            "name": "required"
                                        }
                                    ]
                                },
                                "title": "Last Name",
                                "type": "column"
                            }
                        ]
                    },
                    {
                        "cells": [
                            {
                                "info": {
                                    "internalName": "Email",
                                    "type": "text",
                                    "validations": [
                                        {
                                            "name": "required"
                                        },
                                        {
                                            "name": "email"
                                        }
                                    ]
                                },
                                "title": "Email",
                                "type": "column"
                            },
                            {
                                "info": {
                                    "internalName": "PhoneNumber",
                                    "type": "text",
                                    "validations": [
                                        {
                                            "name": "phone"
                                        }
                                    ]
                                },
                                "title": "Phone number",
                                "type": "column"
                            }
                        ]
                    },
                    {
                        "cells": [
                            {
                                "info": {
                                    "internalName": "ContactSource",
                                    "isMulti": false,
                                    "options": [
                                        {
                                            "key": "Search",
                                            "value": "Search"
                                        },
                                        {
                                            "key": "Event",
                                            "value": "Event"
                                        },
                                        {
                                            "key": "Friend",
                                            "value": "Friend"
                                        }
                                    ],
                                    "type": "choice"
                                },
                                "title": "How did you hear about us?",
                                "type": "column"
                            },
                            {
                                "conditions": [
                                    {
                                        "field": "ContactSource",
                                        "operator": "is",
                                        "value": "Friend"
                                    }
                                ],
                                "else": {
                                    "html": "",
                                    "type": "html"
                                },
                                "info": {
                                    "internalName": "ReferralName",
                                    "type": "text"
                                },
                                "title": "Referral name",
                                "type": "column"
                            }
                        ]
                    },
                    {
                        "cells": [
                            {
                                "info": {
                                    "internalName": "Position",
                                    "isMulti": false,
                                    "options": [
                                        {
                                            "key": "Sales",
                                            "value": "Sales"
                                        },
                                        {
                                            "key": "Marketing",
                                            "value": "Marketing"
                                        },
                                        {
                                            "key": "Operations",
                                            "value": "Operations"
                                        }
                                    ],
                                    "type": "choice",
                                    "validations": [
                                        {
                                            "name": "required"
                                        }
                                    ]
                                },
                                "title": "Position",
                                "type": "column"
                            },
                            {
                                "info": {
                                    "fileTypes": [
                                        "docx",
                                        "pdf"
                                    ],
                                    "internalName": "cv",
                                    "type": "file",
                                    "validations": [
                                        {
                                            "name": "required"
                                        }
                                    ]
                                },
                                "title": "CV",
                                "type": "column"
                            }
                        ]
                    },
                    {
                        "cells": [
                            {
                                "info": {
                                    "internalName": "CoverLetter",
                                    "mode": "multiline",
                                    "type": "text",
                                    "validations": [
                                        {
                                            "name": "required"
                                        },
                                        {
                                            "conditions": [
                                                {
                                                    "field": "CoverLetter",
                                                    "operator": "less",
                                                    "value": "10"
                                                }
                                            ],
                                            "error": "Please provide more info"
                                        }
                                    ]
                                },
                                "title": "Cover letter",
                                "type": "column"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "onSubmitMessage": "Your request has been submitted, we will be in touch soon!"
}
